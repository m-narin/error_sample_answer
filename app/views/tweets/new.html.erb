<h1>Tweets#new</h1>
<p>Find me in app/views/tweets/new.html.erb</p>

<h3>新規tweet</h3>
<%= form_for @tweet do |f| %>

    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, :size => 10 %>
    </div>

    <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body, :size => "30x3" %>
    </div>

    <%= f.submit "Tweetを投稿する" %>
    <% end %>

<%= link_to "Tweet一覧に戻る", tweets_path %>